<resources>
	
  <declare-styleable name="NumberPicker">
	  
    <attr name="minValue" format="integer" />
    <attr name="maxValue" format="integer" />
    <attr name="defaultValue" format="integer" />
    <attr name="num" format="integer" />
    <attr name="textSize" format="dimension" />
    <attr name="textColor" format="color" />
    <attr name="inactiveTextColor" format="color" />
    <attr name="separatorColor" format="color" />
    <attr name="backgroundColor" format="color" />
    <attr name="focusable" format="boolean" />
    <attr name="wrapSelector" format="boolean" />
	  <attr name="enabled" format="boolean" />
	  <attr name="android:text" />
	  
  </declare-styleable>
	
  <declare-styleable name="SplitPaneLayout">
    
    <attr name="orientation">
      <enum name="horizontal" value="1" />
      <enum name="vertical" value="0" />
    </attr>
    
    <attr name="splitterSize" format="dimension" />
    <attr name="splitterMovable" format="boolean" />
    <attr name="splitterPosition" format="dimension|fraction" />
    <attr name="splitterBackground" format="reference|color" />
    <attr name="splitterDraggingBackground" format="reference|color" />
    
  </declare-styleable>
	
  <declare-styleable name="CalendarView">
	  
	  <attr name="selected_text_color" format="color|reference" />
	  <attr name="markedTextColor" format="color|reference" />
	  <attr name="prevTextColor" format="color|reference" />
	  <attr name="showTodayOnDay" format="boolean" />
	  <attr name="dayLayout" format="reference" />
	  <attr name="dayNameLayout" format="reference" />
	  <attr name="daysNum" format="integer" />
	  
  </declare-styleable>
	
	<declare-styleable name="DrawableTextView">
		
    <attr name="drawableColorCompatTextView" format="reference|color" />
    <attr name="drawableWidthHeightCompatTextView" format="integer" />
    <attr name="drawableLeftCompatTextView" format="reference" />
    <attr name="drawableStartCompatTextView" format="reference" />
    <attr name="drawableRightCompatTextView" format="reference" />
    <attr name="drawableEndCompatTextView" format="reference" />
    <attr name="drawableTopCompatTextView" format="reference" />
    <attr name="drawableBottomCompatTextView" format="reference" />
	  <attr name="android:text" />
    <attr name="android:textSize" />
		<attr name="src" format="integer" />
    <attr name="android:textAppearance" />
		<attr name="android:textColor" />
		
	</declare-styleable>
	
  <declare-styleable name="BottomNavigationView">
	  
	  <attr name="menu" format="reference" />
	  <attr name="item_layout" format="reference" />
	  
  </declare-styleable>
	
</resources>